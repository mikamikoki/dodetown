<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<% post_images.each do |post_image| %>
<div>
  <%= link_to post_image_path(post_image.id) do %>
  <%= attachment_image_tag post_image, :image %>
  <% end %>
  <td><%= link_to user_path(post_image.user) do %>
  <p><%= attachment_image_tag(post_image.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></p>
  <% end %>
  <p>ショップ名：<%= post_image.shop_name %></p>
  <p>住所 : <%= post_image.address %></p>
  <p>説明：<%= post_image.caption %></p>
  <p>ユーザーネーム：<%= post_image.user.name %></p>
  <div id="favorite_buttons_<%= post_image.id %>">
  <%= render "favorites/favorite", post_image: post_image, current_user: current_user %>
  </div>
  <td>コメント数：<%= post_image.post_comments.count %></td>
</div>
<% end %>