<table class='table'>
  <% post_image.post_comments.each do |post_comment| %>
  <tr>
    <!--<td><#%= attachment_image_tag(post_comment.user, :profile_image, :fill, 50, 50, fallback:'no_image.jpg') %></td>-->
    <td><%= post_image.user.name %></td>
    <td><%= post_comment.comment %></td>
        <% if post_comment.user == current_user %>
    <td><%= link_to 'Destroy', post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_#{post_image.id}"%></td>
        <% end %>
  </tr>
  <% end %>
</table>